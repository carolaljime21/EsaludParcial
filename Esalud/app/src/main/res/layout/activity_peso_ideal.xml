<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pesoIdeal">


    <TextView
        android:id="@+id/textView_calPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Tu peso ideal es de: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/sexo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPesoIdeal"
        app:layout_constraintVertical_bias="0.543" />

    <Button
        android:id="@+id/button_regresar"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/buttnRegresar"
        android:text="Regresar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <Button
        android:id="@+id/button_calcularPI"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/buttnEsalud"
        android:text="Calcular"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />

    <EditText
        android:id="@+id/altura"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginEnd="12dp"
        android:background="@color/fondo"
        android:hint="Altura (cm)"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/text_form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <EditText
        android:id="@+id/sexo"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginEnd="12dp"
        android:background="@color/fondo"
        android:hint="Sexo (Masculino o Femenino)"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

    <TextView
        android:id="@+id/viewPesoIdeal"
        android:layout_width="229dp"
        android:layout_height="142dp"
        android:layout_marginBottom="448dp"
        android:background="@color/tittleEsalud"
        android:padding="20dp"
        android:text="PI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pi"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/textView_pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-medium"
        android:text="CALCULADORA PESO IDEAL"
        android:textColor="@color/tittleEsalud"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>